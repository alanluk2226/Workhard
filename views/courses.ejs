<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Courses - Fitness App</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .courses-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .course-card {
            background: rgba(0, 0, 0, 0.8);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 12px rgba(0, 255, 127, 0.1);
            border-left: 4px solid #00ff7f;
            border: 1px solid rgba(0, 255, 127, 0.2);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .course-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 255, 127, 0.1), transparent);
            transition: left 0.5s ease;
        }
        
        .course-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0, 255, 127, 0.2);
            border-color: rgba(0, 255, 127, 0.4);
        }
        
        .course-card:hover::before {
            left: 100%;
        }
        
        .course-card h3 {
            color: #00ff7f !important;
            text-shadow: 0 0 5px rgba(0, 255, 127, 0.3);
        }
        
        .course-card p {
            color: #e0e0e0;
        }
        
        .course-header {
            display: flex;
            justify-content: between;
            align-items: flex-start;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
        }
        
        .course-type {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            color: #000;
            text-shadow: none;
        }
        
        .yoga { background: linear-gradient(135deg, #ff69b4, #ff1493); }
        .bodyweight { background: linear-gradient(135deg, #00ffff, #0080ff); }
        .hiit { background: linear-gradient(135deg, #5ecf97, #2ed573); }
        .circuittraining { background: linear-gradient(135deg, #a4c220, #7cb342); }
        .pilates { background: linear-gradient(135deg, #a470f7, #8e44ad); }
        .cardiokickboxing { background: linear-gradient(135deg, #e65b95, #e91e63); }
        .zumba { background: linear-gradient(135deg, #a57e2a, #d4af37); }
        .other { background: linear-gradient(135deg, #9b59b6, #8e44ad); }
        
        .course-schedule {
            background: rgba(0, 255, 127, 0.1);
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
            border: 1px solid rgba(0, 255, 127, 0.2);
            color: #e0e0e0;
            position: relative;
            z-index: 1;
        }
        
        .course-schedule strong {
            color: #00ff7f;
        }
        
        .coach-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1rem 0;
            padding: 1rem;
            background: rgba(0, 255, 127, 0.1);
            border-radius: 8px;
            border: 1px solid rgba(0, 255, 127, 0.2);
            transform: translateZ(0);
            flex-shrink: 0;
            position: relative;
            z-index: 1;
        }
        
        .coach-info strong {
            color: #00ff7f;
        }
        
        .coach-info a {
            color: #00ff7f !important;
            text-decoration: none;
        }
        
        .coach-info a:hover {
            text-shadow: 0 0 5px rgba(0, 255, 127, 0.5);
        }
        
        .coach-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid rgba(0, 255, 127, 0.3);
        }
        
        .enroll-btn {
            width: 100%;
            padding: 0.75rem;
            background: linear-gradient(135deg, #00ff7f, #00cc66);
            color: #000;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
        }
        
        .enroll-btn:hover {
            background: linear-gradient(135deg, #00cc66, #00ff7f);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 255, 127, 0.3);
        }
        
        .enroll-btn:disabled {
            background: rgba(128, 128, 128, 0.5);
            color: #666;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
        
        .filter-section {
            background: rgba(0, 0, 0, 0.8);
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            box-shadow: 0 2px 8px rgba(0, 255, 127, 0.1);
            border: 1px solid rgba(0, 255, 127, 0.2);
            backdrop-filter: blur(10px);
        }
        
        .filter-section h3 {
            color: #00ff7f;
            text-shadow: 0 0 5px rgba(0, 255, 127, 0.3);
        }
        
        .filter-options {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            margin-top: 1rem;
        }
        
        .filter-btn {
            padding: 0.5rem 1rem;
            border: 2px solid rgba(0, 255, 127, 0.3);
            background: rgba(0, 0, 0, 0.7);
            color: #00ff7f;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        
        .filter-btn:hover {
            background: rgba(0, 255, 127, 0.1);
            border-color: rgba(0, 255, 127, 0.5);
            transform: translateY(-2px);
        }
        
        .filter-btn.active {
            background: linear-gradient(135deg, #00ff7f, #00cc66);
            color: #000;
            border-color: #00ff7f;
            box-shadow: 0 4px 15px rgba(0, 255, 127, 0.3);
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <div class="nav-brand">üèãÔ∏è Fitness Tracker</div>
            <div class="nav-links">
                <a href="/" class="nav-link">Home</a>
                <a href="/courses" class="nav-link">Courses</a>
                <a href="/my-courses" class="nav-link">My Courses</a>
                <a href="/create" class="nav-link">Workouts</a>
                <% if (user) { %>
                    <div class="user-info">
                        <span>Welcome, <%= user.username %>!</span>
                        <a href="/logout" class="btn btn-danger">Logout</a>
                    </div>
                <% } else { %>
                    <a href="/login" class="nav-link">Login</a>
                <% } %>
            </div>
        </nav>

        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Fitness Courses üèÉ‚Äç‚ôÄÔ∏è</h1>
                <p>Join our expert-led fitness classes and achieve your goals</p>
            </div>

            <!-- Popular Courses Section -->
            <div id="popularCoursesSection" style="display: none; margin-bottom: 2rem;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                    <h2 style="color: var(--color-neon-green); margin: 0;">üî• Popular This Week</h2>
                    <span id="promotionTimer" style="color: var(--color-text-light); font-size: 0.9rem;"></span>
                </div>
                <div id="popularCoursesList" class="courses-container" style="margin-bottom: 2rem;">
                    <!-- Popular courses will be loaded here -->
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <h3>Filter by Activity Type</h3>
                <div class="filter-options">
                    <button class="filter-btn active" data-type="all">All Courses</button>
                    <button class="filter-btn" data-type="yoga">Yoga</button>
                    <button class="filter-btn" data-type="bodyweight">Body Weight</button>
                    <button class="filter-btn" data-type="hiit">HIIT</button>
                    <button class="filter-btn" data-type="circuittraining">Circuit Training</button>
                    <button class="filter-btn" data-type="pilates">Pilates</button>
                    <button class="filter-btn" data-type="cardiokickboxing">Cardio Kickboxing</button>
                    <button class="filter-btn" data-type="zumba">Zumba</button>
                    <button class="filter-btn" data-type="other">Other</button>
                </div>
            </div>

            <!-- Courses List -->
            <div id="coursesList" class="courses-container">
                <div style="text-align: center; padding: 2rem; grid-column: 1 / -1;">
                    <p>Loading courses...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let allCourses = [];
        let currentPromotion = null;
        
        // Load courses
        async function loadCourses() {
            try {
                console.log('Loading courses...');
                
                // Load popular courses first
                await loadPopularCourses();
                
                console.log('Fetching courses from /api/courses...');
                const response = await fetch('/api/courses');
                console.log('Response status:', response.status);
                
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Response error text:', errorText);
                    throw new Error(`HTTP error! status: ${response.status}, text: ${errorText}`);
                }
                
                const data = await response.json();
                console.log('Courses data received:', data);
                
                if (data.success && data.courses) {
                    allCourses = data.courses;
                    console.log('Number of courses loaded:', allCourses.length);
                    
                    // Log each course for debugging
                    allCourses.forEach((course, index) => {
                        console.log(`Course ${index + 1}:`, {
                            name: course.name,
                            type: course.type,
                            status: course.status,
                            hasCoach: !!course.coach,
                            coachName: course.coach?.name,
                            hasSchedule: !!(course.schedule || course.schedules)
                        });
                    });
                    
                    displayCourses(allCourses);
                } else {
                    console.error('API returned error or no courses:', data);
                    document.getElementById('coursesList').innerHTML = `
                        <div style="text-align: center; color: red; grid-column: 1 / -1;">
                            <h3>API Error</h3>
                            <p>${data.error || 'No courses found'}</p>
                            <p>Check browser console for more details</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error loading courses:', error);
                document.getElementById('coursesList').innerHTML = `
                    <div style="text-align: center; color: red; grid-column: 1 / -1;">
                        <h3>Connection Error</h3>
                        <p>Error loading courses: ${error.message}</p>
                        <p>Please check:</p>
                        <ul style="text-align: left; display: inline-block;">
                            <li>Server is running</li>
                            <li>Database is connected</li>
                            <li>Network connection</li>
                        </ul>
                        <button onclick="loadCourses()" style="margin-top: 1rem; padding: 0.5rem 1rem; background: #00ff7f; color: #000; border: none; border-radius: 4px; cursor: pointer;">
                            Retry
                        </button>
                    </div>
                `;
            }
        }
        
        // Load popular courses promotion
        async function loadPopularCourses() {
            try {
                const response = await fetch('/api/promotions/popular');
                const data = await response.json();
                
                if (data.success && data.promotion && data.promotion.courses.length > 0) {
                    currentPromotion = data.promotion;
                    displayPopularCourses(data.promotion.courses);
                    updatePromotionTimer(data.promotion.endDate);
                    document.getElementById('popularCoursesSection').style.display = 'block';
                } else {
                    document.getElementById('popularCoursesSection').style.display = 'none';
                }
            } catch (error) {
                console.error('Error loading popular courses:', error);
                document.getElementById('popularCoursesSection').style.display = 'none';
            }
        }
        
        // Display popular courses
        function displayPopularCourses(courses) {
            const container = document.getElementById('popularCoursesList');
            
            container.innerHTML = courses.map(course => {
                // Handle both single schedule and multiple schedules
                let scheduleDisplay = '';
                if (course.schedules && course.schedules.length > 0) {
                    // Multiple schedules
                    scheduleDisplay = course.schedules.map(schedule => 
                        `${formatDay(schedule.day)}<br>${schedule.startTime} - ${schedule.endTime}`
                    ).join('<br><br>');
                } else if (course.schedule && course.schedule.day) {
                    // Single schedule (legacy)
                    scheduleDisplay = `${formatDay(course.schedule.day)}<br>${course.schedule.startTime} - ${course.schedule.endTime}`;
                } else {
                    scheduleDisplay = 'Schedule TBD';
                }
                
                return `
                    <div class="course-card popular-course" data-type="${course.type}" style="border: 2px solid var(--color-neon-green); box-shadow: 0 0 20px rgba(0, 255, 127, 0.3);">
                        <div class="course-header">
                            <h3 style="margin: 0; flex: 1;">${course.name}</h3>
                            <span class="course-type ${course.type}">${course.type.toUpperCase()}</span>
                            <span style="background: linear-gradient(135deg, var(--color-neon-green), #00cc66); color: #000; padding: 0.25rem 0.5rem; border-radius: 12px; font-size: 0.7rem; font-weight: bold; margin-left: 0.5rem;">üî• POPULAR</span>
                        </div>
                        
                        <div class="course-schedule">
                            <strong>Schedule:</strong><br>
                            ${scheduleDisplay}
                        </div>
                        
                        <div class="coach-info">
                            <img src="${course.coach.image && course.coach.image !== 'N/A' ? course.coach.image : '/images/default-coach.jpg'}" 
                                 alt="${course.coach.name}" 
                                 class="coach-avatar"
                                 onerror="this.src='/images/default-coach.jpg'">
                            <div>
                                <strong>Coach: ${course.coach.name}</strong><br>
                                <a href="/coach/${course.coach._id}" style="color: #667eea; text-decoration: none;">
                                    View Profile ‚Üí
                                </a>
                            </div>
                        </div>
                        
                        <p>${course.description || 'Join this amazing fitness class!'}</p>
                        
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem;">
                            <span style="color: #666;">
                                ${course.currentParticipants}/${course.maxParticipants} enrolled
                            </span>
                            <button class="enroll-btn" onclick="enrollCourse('${course._id}', true)" 
                                    ${course.currentParticipants >= course.maxParticipants ? 'disabled' : ''}
                                    style="background: linear-gradient(135deg, var(--color-neon-green), #00cc66); color: #000; font-weight: bold;">
                                ${course.currentParticipants >= course.maxParticipants ? 'Full' : 'üî• Enroll Now'}
                            </button>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        // Update promotion timer
        function updatePromotionTimer(endDate) {
            const updateTimer = () => {
                const now = new Date();
                const end = new Date(endDate);
                const diff = end - now;
                
                if (diff <= 0) {
                    document.getElementById('promotionTimer').textContent = 'Promotion expired';
                    // Reload popular courses to get new promotion
                    setTimeout(loadPopularCourses, 1000);
                    return;
                }
                
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                
                document.getElementById('promotionTimer').textContent = 
                    `Ends in: ${days}d ${hours}h ${minutes}m`;
            };
            
            updateTimer();
            setInterval(updateTimer, 60000); // Update every minute
        }
        
        // Display courses
        function displayCourses(courses) {
            console.log('Displaying courses:', courses);
            const container = document.getElementById('coursesList');
            
            if (courses.length === 0) {
                container.innerHTML = `
                    <div style="text-align: center; padding: 3rem; grid-column: 1 / -1;">
                        <h3>No courses available</h3>
                        <p>Check back later for new courses!</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = courses.map(course => {
                console.log('Processing course:', course.name, 'Type:', course.type);
                // Handle both single schedule and multiple schedules
                let scheduleDisplay = '';
                if (course.schedules && course.schedules.length > 0) {
                    // Multiple schedules
                    scheduleDisplay = course.schedules.map(schedule => 
                        `${formatDay(schedule.day)}<br>${schedule.startTime} - ${schedule.endTime}`
                    ).join('<br><br>');
                } else if (course.schedule && course.schedule.day) {
                    // Single schedule (legacy)
                    scheduleDisplay = `${formatDay(course.schedule.day)}<br>${course.schedule.startTime} - ${course.schedule.endTime}`;
                } else {
                    scheduleDisplay = 'Schedule TBD';
                }
                
                return `
                    <div class="course-card" data-type="${course.type}">
                        <div class="course-header">
                            <h3 style="margin: 0; flex: 1;">${course.name}</h3>
                            <span class="course-type ${course.type}">${course.type.toUpperCase()}</span>
                        </div>
                        
                        <div class="course-schedule">
                            <strong>Schedule:</strong><br>
                            ${scheduleDisplay}
                        </div>
                        
                        <div class="coach-info">
                            <img src="${course.coach.image && course.coach.image !== 'N/A' ? course.coach.image : '/images/default-coach.jpg'}" 
                                 alt="${course.coach.name}" 
                                 class="coach-avatar"
                                 onerror="this.src='/images/default-coach.jpg'">
                            <div>
                                <strong>Coach: ${course.coach.name}</strong><br>
                                <a href="/coach/${course.coach._id}" style="color: #667eea; text-decoration: none;">
                                    View Profile ‚Üí
                                </a>
                            </div>
                        </div>
                        
                        <p>${course.description || 'Join this amazing fitness class!'}</p>
                        
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 1rem;">
                            <span style="color: #666;">
                                ${course.currentParticipants}/${course.maxParticipants} enrolled
                            </span>
                            <button class="enroll-btn" onclick="enrollCourse('${course._id}')" 
                                    ${course.currentParticipants >= course.maxParticipants ? 'disabled' : ''}>
                                ${course.currentParticipants >= course.maxParticipants ? 'Full' : 'Enroll Now'}
                            </button>
                        </div>
                    </div>
                `;
            }).join('');
            
            console.log('Courses displayed successfully');
        }
        
        // Format day names
        function formatDay(day) {
            const days = {
                monday: 'Monday',
                tuesday: 'Tuesday',
                wednesday: 'Wednesday',
                thursday: 'Thursday',
                friday: 'Friday',
                saturday: 'Saturday',
                sunday: 'Sunday',
                Monday: 'Monday',
                Tuesday: 'Tuesday',
                Wednesday: 'Wednesday',
                Thursday: 'Thursday',
                Friday: 'Friday',
                Saturday: 'Saturday',
                Sunday: 'Sunday'
            };
            return days[day] || day;
        }
        
        // Enroll in course
        async function enrollCourse(courseId, isPopular = false) {
            const isLoggedIn = <%= user ? 'true' : 'false' %>;
            
            if (!isLoggedIn) {
                alert('Please login to enroll in courses');
                window.location.href = '/login';
                return;
            }
            
            if (!confirm('Are you sure you want to enroll in this course?')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/courses/${courseId}/enroll`, {
                    method: 'POST'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Track promotion enrollment if this is a popular course
                    if (isPopular && currentPromotion) {
                        try {
                            await fetch(`/api/promotions/${currentPromotion.id}/track-enrollment`, {
                                method: 'POST'
                            });
                        } catch (error) {
                            console.error('Error tracking promotion enrollment:', error);
                        }
                    }
                    
                    alert('Successfully enrolled in the course!');
                    loadCourses(); // Reload course list
                } else {
                    alert('Error: ' + data.error);
                }
            } catch (error) {
                console.error('Enroll error:', error);
                alert('Error enrolling in course. Please try again.');
            }
        }
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadCourses();
            
            // Filter button events
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Update active state
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    const filterType = this.dataset.type;
                    
                    if (filterType === 'all') {
                        displayCourses(allCourses);
                    } else {
                        const filteredCourses = allCourses.filter(course => course.type === filterType);
                        displayCourses(filteredCourses);
                    }
                });
            });
        });
    </script>

